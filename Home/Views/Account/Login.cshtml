@using Home.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link rel="stylesheet" href="/css/metro-bootstrap.css" />
<link href="~/css/iconFont.min.css" rel="stylesheet" />
<link href="~/Content/myStyle.css" rel="stylesheet" />
<link href="~/Content/themes/base/core.css" rel="stylesheet" />
<link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />
<link href="~/Content/themes/base/theme.css" rel="stylesheet" />
<link href="~/Content/animate.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<style>
    .panel {
        box-shadow: 10px 10px 30px lightblue;
        border-color: lightblue;
        border-radius:20px;
    }

    #menu {
        border-right: 1px solid lightblue;
        height: 100%;
    }

    .nopadding {
        padding: 0 !important;
        margin: 0 !important;
    }
</style>

<div class="container" style="padding-top: 7%;padding-left:20%;">
    <div class="panel panel-info" style="width:80%;">
        <div class="panel-body">
            <div class="text-center"><h3>Login with</h3></div>
            <hr />
            <div class="row">
                <div class="col-sm-8" style="margin-left: 15px; width: 50%;" id="menu">
                    <section id="loginForm" style="padding-left:2%;">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group input-group">
                                <label class="input-group-addon" style="width:50px;"><i class="fa fa-user"></i></label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", style = "width:250px;" })
                            </div>
                            <div class="form-group input-group">
                                <label class="input-group-addon" style="width:50px;"><i class="fa fa-lock"></i></label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", style = "width:250px;" })
                            </div>
                            <div class="form-group form-inline">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="small">
                                            <div class="checkbox" style="margin-top: -10px;">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                <label style="">Remember Me?</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6" style="margin-left: -15px;">
                                        <div class="small">@Html.ActionLink("Forgot your password?", "ForgotPassword")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Log in" style="width:100%" class="btn btn-primary" />
                                </div>
                            </div>
                            <div class="row">
                                <p class="small">
                                    Don't have an account ? @Html.ActionLink("Sign Up", "Register")
                                </p>
                            </div>
                        }
                    </section>
                </div>
                <div class="col-sm-4" style="margin-left: 15px; width: 31.6%;">
                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script>
    $(document).ready(function () {
        $("#Email").focus();
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}