
@model IEnumerable<Home.Models.Transaction>


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" style="color:lightblue" id="myModal-label">
        <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
        Warning
    </h4>

</div>
<div class="modal-body">
    <div style="color:lightblue"> @ViewBag.Cat is using in Transaction List.So Plaese delete the Following items from Transaction list Before Editing @ViewBag.Cat </div>
    <div style="max-height:500px;overflow-y: scroll;">
        <table class="table">
            <tr>
                <th>
                    Cateogory
                </th>
                <th>
                    Description
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Date
                </th>
                <th>
                    Type
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categories.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionTypes)
                    </td>
                </tr>
            }
        </table>
    </div>


</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
</div>
